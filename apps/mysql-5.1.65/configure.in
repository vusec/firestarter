      then
	AC_MSG_RESULT("yes")
      else
	AC_MSG_ERROR([On SCO UNIX MySQL must be compiled with gcc. See the Installation chapter in the Reference Manual.])
      fi
      AC_MSG_RESULT("yes")
    # Hack for SCO UnixWare 7.1.x

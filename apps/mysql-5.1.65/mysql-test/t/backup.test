#
# Bug#18775 - Temporary table from alter table visible to other threads
#
# Backup did not encode table names.
--disable_warnings
DROP TABLE IF EXISTS `t+1`;
--enable_warnings
CREATE  TABLE `t+1` (c1 INT);
INSERT  INTO  `t+1` VALUES (1), (2), (3);
BACKUP  TABLE `t+1` TO '../../tmp';
DROP    TABLE `t+1`;
#
